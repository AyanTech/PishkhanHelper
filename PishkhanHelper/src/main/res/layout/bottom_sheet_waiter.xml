<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_16">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logoIv"
        android:layout_width="@dimen/margin_74"
        android:layout_height="@dimen/margin_74"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/helper_ic_logo"
        app:tint="@color/helper_color_primary" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/descriptionTv"
        style="@style/Text4Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoIv"
        android:layout_marginTop="@dimen/margin_8"
        android:gravity="center"
        android:text="@string/please_wait_for_response"
        android:textColor="@color/helper_text_black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cancelTv"
        style="@style/Text6Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_4"
        android:gravity="center"
        android:padding="@dimen/margin_8"
        android:text="@string/cancel"
        android:textColor="@color/helper_state_error" />

</RelativeLayout>