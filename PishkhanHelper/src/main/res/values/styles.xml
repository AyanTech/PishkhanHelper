<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    region BottomSheetRating Layout-->
    <style name="BottomSheetRating">
        <item name="android:background">@color/BottomSheetRatingRootBackground</item>
    </style>



    <style name="BottomSheetRating.YesButton">
        <item name="android:textColor">@color/rating_bottom_sheet_yes_btn_text_color</item>
        <item name="android:backgroundTint">@color/rating_bottom_sheet_yes_btn_background_color
        </item>
    </style>

    <style name="BottomSheetRating.LaterButton">
        <item name="android:textColor">@color/rating_bottom_sheet_later_btn_text_color</item>
        <item name="android:backgroundTint">@color/rating_bottom_sheet_later_btn_background_color
        </item>
    </style>

    <style name="BottomSheetRating.Message">
        <item name="android:textColor">@color/rating_bottom_sheet_message_tv_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--    endregion-->

    <style name="GlobalTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/edittext_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edittext_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edittext_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/edittext_radius</item>
        <item name="boxStrokeWidth">@dimen/edittext_stroke_width</item>
        <item name="boxStrokeWidthFocused">@dimen/edittext_stroke_width</item>
        <item name="boxStrokeErrorColor">@color/state_error</item>
        <item name="errorTextColor">@color/state_error</item>
        <item name="boxStrokeColor">@color/background_edittext_stroke_enable_disable</item>
        <item name="boxBackgroundColor">@color/background_edittext_solid_enable_disable</item>
        <item name="hintEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="GlobalTextInputEditText" parent="Text3Regular">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_edittext_enable_disable</item>
        <item name="android:textColorHint">@color/text_color_edittext_enable_disable</item>
        <item name="android:paddingTop">@dimen/margin_4</item>
        <item name="android:paddingBottom">@dimen/margin_4</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="AppButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/ButtonTextStyle</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="colorControlActivated">@color/color_primary</item>
        <item name="colorControlHighlight">@color/color_primary</item>
        <item name="colorControlNormal">@color/color_primary</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>
</resources>